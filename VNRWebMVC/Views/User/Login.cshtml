@model VNRWebMVC.Models.Users
<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <link rel="stylesheet" href="~/Content/login.css">
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="~/Content/login.js"></script>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.2/dist/css/bootstrap.min.css">
    <script src="https://cdn.jsdelivr.net/npm/jquery@3.6.4/dist/jquery.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.1/dist/umd/popper.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.6.2/dist/js/bootstrap.bundle.min.js"></script>
    <title>Login Form</title>
</head>

<body class="bd">
    @using (Html.BeginForm("Login", "User", FormMethod.Post, new { id = "loginForm" }))
    {
        @Html.AntiForgeryToken()
        <div class="wrapper">


            <div id="loader" style="display: none;">
                <img src="https://i.gifer.com/ZKZg.gif" style="height:30%;width:15%" />
            </div>
            <div class="logo">
                <img src="https://img.freepik.com/free-vector/illustration-graduation-hat_53876-5920.jpg" alt="college logo">
            </div><br />
            <div class="text-center mt-2 name">
                Login Portal
            </div><br />
            <form class="p-3 mt-3">
                <div class="field-container">
                    <span class="fas fa-user"></span>
                    @Html.TextBoxFor(model => model.Username, new { placeholder = "Enter Username", id = "Username", htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Username, "", new { @class = "validation-message UerrorMessage" })
                </div>
                <br />
                <div class="field-container">
                    <span class="fas fa-key"></span>
                    @Html.PasswordFor(model => model.Password, new { placeholder = "Enter Password", id = "Password", htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Password, "", new { @class = "validation-message PerrorMessage" })
                </div>
                <button type="button" id="loginButton" class="btn mt-4">Login</button>
            </form>
        </div>
    }
</body>
</html>


